# Example allocator configuration file (YAML format)
# Copy this file to allocator_config.yaml and customize as needed

# Budget Management
maximize_budget_utilization: true
budget_maximization_weight_multiplier: 1.5
min_budget_utilization: 0.0

# Skill Matching
allow_allocation_without_skills: true
no_skills_penalty_multiplier: 2.0

# Skill Development
allow_skill_development: true
skill_dev_max_fte: 0.2

# Team Constraints
max_employee_per_project: 0.8
min_team_size: 1

# Allocation Type
discrete_allocations: false
allocation_increments: [0.25, 0.5, 0.75, 1.0]

# Budget Flexibility
budget_flexibility: true
max_budget_borrow: 1

# Team Composition
enable_team_diversity: true
enable_employee_preferences: true

# Role-Based Allocation
enforce_role_allocation: true
min_role_allocation:
  DEV: 0.1
  QA: 0.05
  BA: 0.0
role_allocation_ratios:
  DEV: 0.50
  QA: 0.30
  BA: 0.20
